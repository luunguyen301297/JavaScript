<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Bồi Thường</title>
    <%- include ('./layout/head.ejs') -%>
    <link rel="stylesheet" href="/css/indemnify.css" />
  </head>

  <%- include ('./layout/header.ejs') -%>
  <body>
    <div class="text">
      <h1>Insurance Compensation</h1>
      <div class="pixel"></div>
      <form class="row g-3 needs-validation" novalidate>
        <div class="col-md-4" id="name">
          <label for="validationCustomUsername" class="form-label">Last Name</label>
          <div class="input-group has-validation">
            <span class="input-group-text" id="inputGroupPrepend"><i class="fa-solid fa-user"></i></span>
            <input type="text" name="userName" class="form-control" id="userName" id="validationCustomUsername" aria-describedby="inputGroupPrepend" required />
            <div class="invalid-feedback">Please Enter Information!</div>
          </div>
        </div>

        <div class="col-md-4">
          <label for="validationCustomUsername" class="form-label">Citizen ID</label>
          <div class="input-group has-validation">
            <span class="input-group-text" id="inputGroupPrepend"><i class="fa-solid fa-id-card"></i></span>
            <input type="text" name="userCCCD" class="form-control" id="userCCCD" id="validationCustomUsername" aria-describedby="inputGroupPrepend" required />
            <div class="invalid-feedback">Please Enter Information!</div>
          </div>
        </div>

        <div class="col-md-4" id="email">
          <label for="validationemail" class="form-label">Email</label>
          <div class="input-group has-validation">
            <span class="input-group-text" id="inputGroupPrepend"><i class="fa-solid fa-envelope"></i></span>
            <input type="email" name="userEmail" class="form-control" id="userEmail" id="validationCustomUsername" placeholder="example@email.com" aria-describedby="inputGroupPrepend" required />
            <div class="invalid-feedback">Please Enter Email !</div>
          </div>
        </div>

        <div class="col-md-4" id="address">
          <label for="validationCustom03" class="form-label">Address</label>
          <input type="text" name="userAddress" class="form-control" id="userAddress" id="validationCustom03" required />
          <div class="invalid-feedback">Please Enter Address !</div>
        </div>

        <div class="col-md-4 position-relative">
          <label for="validationTooltip04" class="form-label">Insurance Type</label>
          <select class="form-select" id="validationTooltip04" required>
            <option selected disabled value="">Choose...</option>
            <option>Automobile liability insurance</option>
            <option>Auto Accident Insurance</option>
            <option>Cargo insurance</option>
            <option>Automobile insurance</option>
            <option>motorcycle civil liability insurance</option>
            <option>Motorcycle accident insurance</option>
          </select>
          <div class="invalid-tooltip">Please select insurance !</div>
        </div>

        <div class="col-md-4">
          <label for="validationCustom05" class="form-label">Phone</label>
          <div class="input-group has-validation">
            <span class="input-group-text" id="inputGroupPrepend">+84</span>
            <input type="number" name="userPhone" class="form-control" id="userPhone" id="validationCustomUsername" aria-describedby="inputGroupPrepend" required />
            <div class="invalid-feedback">Please Enter Phone Number !</div>
          </div>
        </div>

        <div class="col-md-6">
          <label for="validationCustom01" class="form-label">Validation Image:</label>
          <input type="file" class="form-control" aria-label="file example" required />
          <div class="invalid-feedback">Select File</div>
        </div>

        <div class="col-md-6">
          <label for="validationCustom01" class="form-label">Contract Image:</label>
          <input type="file" class="form-control" aria-label="file example" required />
          <div class="invalid-feedback">Select File</div>
        </div>
        <div class="pixel"></div>

        <div class="col-12">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required />
            <label class="form-check-label" for="invalidCheck">I agree to Safe Caz's terms of service</label>
          </div>
        </div>
        <div class="pixel"></div>
        <div class="col-12">
          <button id="button_submit" class="btn btn-outline-primary" type="submit">Submit</button>
        </div>
      </form>
    </div>

    <%- include ('./layout/footer.ejs') -%>
  </body>
  <script>
        var check_varible = 0;
      (function () {
      // Fetch all the forms we want to apply custom Bootstrap validation styles to
      var forms = document.querySelectorAll('.needs-validation')
      // Loop over them and prevent submission
      Array.prototype.slice.call(forms)
        .forEach(function (form) {
          form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
              event.preventDefault()
              event.stopPropagation()
            } else {
              check_varible = 1;
            }

            form.classList.add('was-validated')
          }, false)
        })
    })()
  </script>
</html>
